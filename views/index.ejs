<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Guia Perguntas</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <h1>Guia Perguntas</h1>
    <hr>
    <h3>Lista de Perguntas</h3>

    <ul>
        <li><%= nome %></li>
        <li><%= lang %></li>
        <li><%= empresa %></li>
    </ul>

    <% if (msg == true) { %>
        <h3>Isso Ã© uma mensagem de erro!</h3>
    <% } else { %>
        <h3>Nenhum erro!</h3>     
    <% } %>

    <hr>

    <h2>Produtos</h2>
    <% produtos.forEach(function(produto) { %>
        <ul>
            <hr>
            <li><%= produto.nome %></li>
            <li><%= produto.preco %></li>
        </ul>
    <% }) %>

    <img src="/img/volkswagen-158463_640.png" alt="Kombi">
</body>
</html>